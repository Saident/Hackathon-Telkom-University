<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".zzComingSoon">

    <ImageView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bg_cooming_soon"
        />

    <TextView
        android:id="@+id/stay_tuned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="STAY TUNED"
        android:fontFamily="@font/poppins_medium"
        android:textSize="60sp"
        android:textColor="#4D4D4D"
        android:layout_marginTop="300dp"
        android:background="@drawable/bg_comingsoon"
        android:paddingBottom="30dp"
        android:paddingHorizontal="10dp"
        />

    <TextView
        android:id="@+id/smthng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="SOMETHING HUGE IS COMING !!"
        android:fontFamily="@font/poppins_medium"
        android:textSize="22sp"
        android:textColor="#4D4D4D"
        android:layout_marginTop="375dp"
        />

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:width="160dp"
        android:height="50dp"
        android:background="@drawable/button_login"
        android:elevation="7dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="BACK"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:cornerRadius="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/smthng" />

</androidx.constraintlayout.widget.ConstraintLayout>